# Database (Supabase PostgreSQL)
DATABASE_URL=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Redis (Upstash — TLS obligatoire avec rediss://)
# Utilisé par RedisService (cache, verrous) et Bull (queues)
REDIS_URL=rediss://default:<password>@<host>:6379

# Optionnel — REST Upstash (si besoin d’API REST)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# Cloudinary (uploads images)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Application
PORT=3000
NODE_ENV=development
